<h1>新規登録</h1>
<%= form_with model: User.new, url: users_path, local: true do |f| %>
  <div class="field">
    <h4>ユーザーID</h4>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <h4>ユーザー名</h4>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <h4>パスワード</h4>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <h4>パスワード（確認用）</h4>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit value: "作成" %>
  </div>
<% end %>
