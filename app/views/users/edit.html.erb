<h1>ユーザー情報編集</h1>
<%= form_with model: @user, url: user_path(@user.id), local: true do |f| %>
  <div class="field">
    <h4>ユーザー名</h4>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <div>
      <%= image_tag @user.image.url %>
    </div>
    <h4>ユーザー画像</h4>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit value: "更新" %>
  </div>
<% end %>